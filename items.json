async function loadItems() {
  try {
    const response = await fetch("https://raw.githubusercontent.com/michaelandrewzebra-design/tipssAS/main/items.json");
    if (!response.ok) throw new Error("Failed to load items");
    const items = await response.json();
    renderItems(items);
  } catch (error) {
    console.error("Error loading items:", error);
    document.getElementById("items-container").innerHTML = `
      <p style="color: red; text-align: center;">⚠️ Failed to load items. Please refresh.</p>
    `;
  }
}

// Call the function
loadItems();



